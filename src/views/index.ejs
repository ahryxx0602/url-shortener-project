<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>URL Shortener</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    .truncate-url {
      max-width: 250px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      display: inline-block;
      vertical-align: middle;
      transition: max-width 0.2s;
    }
    .full-url {
      max-width: none !important;
      white-space: normal !important;
      overflow: visible !important;
      text-overflow: unset !important;
      word-break: break-all !important;
    }
    table.table-fixed {
      table-layout: fixed;
      width: 100%;
    }
    th.original-url-col, td.original-url-col {
      width: 300px;
      min-width: 200px;
      max-width: 400px;
    }
  </style>
</head>
<body class="bg-light">
  <div class="container py-5">
    <h1 class="text-center mb-4">üîó URL Shortener</h1>

    <form action="/shorten" method="POST" class="d-flex justify-content-center mb-4">
      <input type="text" name="originalUrl" class="form-control w-50 me-2" placeholder="Nh·∫≠p URL c√≥ http://" required />
      <button type="submit" class="btn btn-primary">R√∫t g·ªçn</button>
    </form>

    <table class="table table-bordered table-hover bg-white shadow-sm table-fixed">
      <thead class="table-dark">
        <tr>
          <th class="original-url-col">Original URL</th>
          <th>Short URL</th>
          <th>Clicks</th>
          <th>Th·ªëng k√™</th>
        </tr>
      </thead>
      <tbody>
        <% urls.forEach((u, idx) => { %>
          <tr>
            <td class="original-url-col">
              <a href="<%= u.originalUrl %>" target="_blank" class="truncate-url" title="<%= u.originalUrl %>" id="originalUrlLink-<%= idx %>"><%= u.originalUrl %></a>
              <button type="button" class="btn btn-link btn-sm p-0 ms-2 toggleUrlBtn" data-idx="<%= idx %>">Hi·ªán th√™m</button>
            </td>
            <td><a href="<%= baseUrl + '/' + u.shortCode %>" target="_blank"><%= baseUrl + '/' + u.shortCode %></a></td>
            <td><%= u.clicks %></td>
            <td><a href="/<%= u.shortCode %>/stats" class="btn btn-sm btn-info">Xem</a></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <script>
    document.querySelectorAll('.toggleUrlBtn').forEach(function(btn) {
      const idx = btn.getAttribute('data-idx');
      const link = document.getElementById('originalUrlLink-' + idx);
      let expanded = false;
      btn.addEventListener('click', function() {
        expanded = !expanded;
        if (expanded) {
          link.classList.add('full-url');
          btn.textContent = 'Thu g·ªçn';
        } else {
          link.classList.remove('full-url');
          btn.textContent = 'Hi·ªán th√™m';
        }
      });
    });
  </script>
</body>
</html>
